# OpenRouter API Key - Get from https://openrouter.ai/
OPENROUTER_API_KEY=your_api_key_here

# GitHub Access Token (for private repositories)
GITHUB_ACCESS_TOKEN=

# Encryption key for saved repositories (generate a random 32+ character string)
# IMPORTANT: Change this to a secure random key and keep it safe
# If you lose this key, your saved repositories cannot be decrypted
ENCRYPTION_KEY=your-secure-random-key-here-at-least-32-chars

# Server Port
PORT=3001

# Site URL for OpenRouter referrer
SITE_URL=http://localhost:5173

# ============================================================================
# DOCKER CONFIGURATION
# These variables are used when running the application with Docker Compose
# ============================================================================

# PostgreSQL Database Configuration
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://hellbender:password@postgres:5432/hellbender
POSTGRES_USER=hellbender
POSTGRES_PASSWORD=password
POSTGRES_DB=hellbender

# Persistent Repositories Storage Path
# This is the path inside the Docker container where repositories will be stored
PERSISTENT_REPOS_PATH=/data/repos

# Node Environment
# Use 'development' for dev mode (hot reload), 'production' for production
NODE_ENV=development
